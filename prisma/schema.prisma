generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role {
  Normal
  ADMIN
  ORPHANAGE
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  role     Role
  orphanage Orphanage?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Orphanage {
  id       String   @id @default(uuid())
  name     String
  address  String?
  phone    String?
  user     User     @relation(fields: [userId], references: [id])
  userId   String   @unique
  orphans  Orphan[]

  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt  
}

model Orphan {
  id          String    @id @default(uuid())
  name        String
  age         Int
  orphanage   Orphanage @relation(fields: [orphanageId], references: [id])
  orphanageId String
}
